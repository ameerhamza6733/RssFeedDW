<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ameerhamza6733.urduNews.SettingsActivity"
    tools:showIn="@layout/activity_settings">


    <Switch
        android:id="@+id/mySwitch"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Text Mode "
        android:checked="false"/>
    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="select_fount">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Urdu Font"
            android:paddingLeft="8dp"
            android:id="@+id/textView2"
            android:textColor="#181717"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose and appropriate font size for urdu headlines and news"
            android:id="@+id/textView"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#181717"/>

    </RelativeLayout>

    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find your interest"
        android:id="@+id/interest_textview"
        android:onClick="show_diloge"
        android:textSize="20sp"/>
    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>
